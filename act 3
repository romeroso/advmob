  return (
    <SafeAreaProvider>
      <SafeAreaView style={{height:1000, flexDirection: 'row'}}>
      <View style={{backgroundColor: 'blue', flex:0.5}}/>
      <View style={{backgroundColor: 'red', flex:0.5}}/>
      <Text>hellow World!</Text>
      </SafeAreaView>
      </SafeAreaProvider>
  );
};

export default ViewBoxesWithColorAndText;
